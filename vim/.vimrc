syntax enable

set encoding=utf-8
set background=dark
set clipboard=
set mouse=a

set noswapfile

set nowrap

set softtabstop=-1
set cindent
set tw=60
set nojoinspaces

set hlsearch
set incsearch
set smartcase ignorecase

nnoremap <Leader>l :nohlsearch<CR>

set laststatus=2
set statusline=%<%f\ %h%m%r%=%-14.(%l,%c%V%)\ %P
